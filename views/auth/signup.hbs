<div class="login">
<form class="form-signin" action="/auth/signup" method="POST" id="form-container">
  <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
  <label class="sr-only" for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">
  <br><br>
  <label class="sr-only" for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>
  <button style="background-color: #251A18;" class="btn btn-lg btn-primary btn-block" >Create account</button>
  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>
</div>

